<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.extrotarget.extropos">

    <application>
        <!-- Debug-only activity to quickly open the dashboard during development. -->
        <activity android:name="com.extrotarget.extropos.debug.DebugLauncherActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Expose debug helper activity that inserts a deterministic category for instrumentation tests -->
        <activity android:name=".ui.debug.DebugCategoryActivity"
            android:exported="true" />
        <activity android:name=".ui.debug.DebugProductActivity"
            android:exported="true" />
    </application>

</manifest>
