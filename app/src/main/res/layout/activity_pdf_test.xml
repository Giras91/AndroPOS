<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PDF Generation Test"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btn_test_receipt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generate Sample Receipt"
        android:layout_marginBottom="16dp"
        android:padding="16dp" />

    <Button
        android:id="@+id/btn_test_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generate Daily Sales Report"
        android:layout_marginBottom="16dp"
        android:padding="16dp" />

    <Button
        android:id="@+id/btn_test_invoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generate Sample Invoice"
        android:layout_marginBottom="16dp"
        android:padding="16dp" />

    <Button
        android:id="@+id/btn_list_pdfs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="List All Generated PDFs"
        android:layout_marginBottom="16dp"
        android:padding="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generated PDFs will be saved in:\nDocuments/ExtroPOS/"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:textColor="#666666" />

</LinearLayout>
